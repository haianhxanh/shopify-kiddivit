<div class="page-width our-advantage">
  <div class="section-block section-block--padding">
    {% if section.settings.title != blank %}
      <div class="section-block__header text-center">
        <h4 class="h1--mini section-block__title">{{ section.settings.title | escape }}</h4>
      </div>
    {% endif %}

    <div class="flex flex--grid flex--grid-center">
      {% for block in section.blocks %}
        <div class="flex__item flex__item--fixed flex flex--center-vertical one-half medium-up--one-quarter text-center" {{ block.shopify_attributes }}>
        <a href="{{ block.settings.link }}">
          <h4>{{ block.settings.heading }}</h4>
          <div class="flex__item">
            <div class="image-block">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: '250x250' }}" alt="{{ block.settings.image.alt }}" class="image-block__image">
              {% else %}
                <div class="image-block__image">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            </div>
          </div>
          <div class="caption">{{ block.settings.caption }}</div>
          </a>
        </div>
      {% endfor %}
    </div>

    {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
    {% endif %}
  </div>
</div>



{% schema %}
{
  "name": {
    "en": "Logo list - our advantage"
  },
  "class": "index-section",
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": {
        "en": "Heading"
      },
      "default": {
        "en": "Logo list"
      }
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": {
        "en": "Logo"
      },
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": {
            "en": "Image"
          }
        },
        {
          "type": "text",
          "id": "heading",
          "label": {
            "en": "Heading"
          }
        },
        {
          "type": "richtext",
          "id": "caption",
          "label": {
            "en": "Caption"
          }
        },
        {
          "type": "url",
          "id": "link",
          "label": {
            "en": "Link"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Logo list - our advantage"
      },
      "category": {
        "en": "Image"
      },
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
