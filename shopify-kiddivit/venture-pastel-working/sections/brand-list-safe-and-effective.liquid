<div class="page-width safety-block">
  <div class="section-block section-block--padding">
    {% if section.settings.title != blank %}
      <div class="section-block__header text-center medium-up--hide">
        <h4 class="h1--mini section-block__title">{{ section.settings.title | escape }}</h4>
      </div>
    {% endif %}

    <div class="flex flex--grid flex--grid-center safe-ingredients">
      {% assign i = 0 %}
      {% for block in section.blocks %}
      {% assign i = i | plus: 150 %}
        {% capture thecycle %}{% cycle 'odd', 'even' %}{% endcapture %}
        <div class="flex__item flex__item--fixed flex flex--center-vertical one-half medium-up--one-sixth text-center safe-ingredient__item{{forloop.index}}" {{ block.shopify_attributes }}
            {% if thecycle == 'odd' %}
              data-aos="fade-right"
            {% endif %}
            {% if thecycle == 'even' %}
              data-aos="fade-left"
            {% endif %}
            data-aos-duration="1500"
            data-aos-delay={{i}}
        >
          <h3>{{ block.settings.heading }}</h3>
          <div class="flex__item">
            <div class="image-block">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: '250x250' }}" alt="{{ block.settings.image.alt }}" class="image-block__image">
              {% else %}
                <div class="image-block__image">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            </div>
          </div>
          <div class="caption">{{ block.settings.caption }}</div>
        </div>
      {% endfor %}
        {% if section.settings.title != blank %}
          <div class="section-block__header text-center small--show safe-ingredient__item-last">
            <h4 class="h1--mini section-block__title"><p>{{ section.settings.title | escape }}</p></h4>
          </div>
        {% endif %}
    </div>

    <div class="flex flex--grid flex--grid-center no-metallic-taste">
      {% if section.settings.content != blank %}
        <div class="safety-block__content">{{ section.settings.content }}</div>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <div class="section-block__header-subtitle text-center">
          <h4 class="h1--mini section-block__subtitle">{{ section.settings.subtitle | escape }}</h4>
        </div>
      {% endif %}
  
      {% if section.settings.button != blank %}
        <a class="hero-content__controls-item hero-content__controls-item--text hero-link-active" href="{{ section.settings.button_url }}">{{ section.settings.button }} <span aria-hidden="true" class="move-arrow">â†’</span></a>
      {% endif %}
    </div>

    {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
    {% endif %}
  </div>
</div>

<style>
  @media (max-width: 749px) {
  .safe-ingredient__item-last {
    display: none !important;
  }
}



  @media (min-width: 750px) {
  .medium-up--hide {
    display: none;
  }
  .safe-ingredients {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 0.3fr 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 0.3fr 1fr 1fr 0.3fr 1fr 1fr;
    margin: 0 auto;
  }
  .safe-ingredient__item1{
    grid-column: 2/4;grid-row: 1/3;
  }
  .safe-ingredient__item2 {

  grid-column: 5/7;
  grid-row: 1/3;

  }
  .safe-ingredient__item3 {

  grid-row: 4/6;
  grid-column: 1/3;

  }
  .safe-ingredient__item4 {

  grid-column: 6/8;
  grid-row: 4/6;

  }
  .safe-ingredient__item5 {

  grid-column: 2/4;
  grid-row: 7/9;

  }
  .safe-ingredient__item6 {

  grid-column: 5/7;
  grid-row: 7/9;

  }

  .safe-ingredient__item-last {

  grid-row: 4/6;
  grid-column: 3/6;

  }


}

  @media (min-width: 990px) {
    .safe-ingredients {
      width: 80%;
    }
  }

    @media (min-width: 1200px) {
    .safe-ingredients {
      width: 70%;
    }
  }

.section-block__header-subtitle.text-center {
  border-radius: 100%;
  height: 200px;
  background-color: red;
  width: 200px;
  display: flex;
}
.h1--mini.section-block__subtitle {
  height: 100%;
  display: inline-block;
  padding-top: 30%;
  color: white;
  font-size: 1.8rem;
  font-weight: bold;
  margin-top: 0;
  
}


.h1--mini.section-block__title {

  color: green;
  font-weight: 900;
  font-size: 2.5rem;

}

.safe-ingredient__item-last .h1--mini.section-block__title{
  word-spacing: 200px;
}

.no-metallic-taste {
  align-items: center;
  padding: 3rem;
}

.no-metallic-taste .safety-block__content {
  margin: 0 auto;

    font-size: 1.25rem;
    color: #041e8b;
    line-height: 2.5rem;
}

.move-arrow {
  position: relative;
  animation: movebutton 2s;
  animation-iteration-count: infinite;
}

@keyframes movebutton {
  from {left: 0px;}
  to {left: 20px;}
}



</style>


